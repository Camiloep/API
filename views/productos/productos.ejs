<%- include("../partials/header")%>

    <!-- Button trigger modal -->
    <div class="container">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success my-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Agregar productos
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Agregar productos</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="col-ms-10">
                            <form action="/productos" method="post">
                                <div class="form-group mt-2">
                                    <input type="text" name="id_Producto" placeholder="ID producto"
                                        class="form-control" required>
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="nombre" placeholder="Nombre" class="form-control" required>
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="precio" placeholder="Precio" class="form-control" required>
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="cantidad" placeholder="Cantidad" class="form-control" required>
                                </div>
                                <select class="form-select mt-2" name="estado" id="estado" required>
                                    <option value="" selected disabled>Seleccione el estado</option>
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo">Inactivo</option>
                                </select>
                                <div class="form-group mt-2">
                                    <input type="text" name="fk_Proveedor" placeholder="Id del proveedor"
                                        class="form-control" required>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary mt-4">Guardar</button>
                                    <button type="button" class="btn btn-secondary mt-4"
                                        data-bs-dismiss="modal">Cancelar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-2">
            <div class="col-md-12">
                <table id="example" class="table table-bordered table-hover me-5">
                        <thead class="bg-dark text-white text-center">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">ID</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Proveedor</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            <% if(productos){ %>
                                <% for(let i=0; i < productos.length; i++ ){%>
                                    <tr>
                                        <td>
                                            <%= (i+1) %>
                                        </td>
                                        <td>
                                            <%= productos[i].id_Producto %>
                                        </td>
                                        <td>
                                            <%= productos[i].nombre %>
                                        </td>
                                        <td>
                                            <%= productos[i].precio %>
                                        </td>
                                        <td>
                                            <%= productos[i].cantidad %>
                                        </td>
                                        <td>
                                            <%= productos[i].estado %>
                                        </td>
                                        <td>
                                            <%= productos[i].fk_Proveedor %>
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" href="productos/edit/<%=productos[i]._id%>"><i
                                                    class="fa-solid fa-pen-to-square"></i></a>
                                                <a class="btn btn-danger" href="productos/eliminar/<%=productos[i]._id%>"><i
                                                    class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    <%} %>
                                        <% } %>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>


        <%- include("../partials/footer")%>