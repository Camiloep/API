<%- include("../partials/header") %>

    <title>Editar Usuarios</title>


        <div class="container mx-5 my-5">
            <div class="row mx-5">
                <div class="col-md-8">
                    <div class="card">
                        <h5 class="modal-title text-center">Editar usuario</h5>
                        <div class="card-body">
                            <form action="/usuarios/update/<%= usuarios._id %> " method="post">
                                <div class="form-group mt-2">
                                    <input type="text" name="nombre" value="<%= usuarios.nombre %>" class="form-control">
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="apellido" value="<%= usuarios.apellido %>" class="form-control">
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="contraseña" value="<%= usuarios.contraseña %>" class="form-control">
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="email" value="<%= usuarios.email %>" class="form-control">
                                </div>
                                <div class="form-group mt-2">
                                    <input type="text" name="estado" value="<%= usuarios.estado %>" class="form-control">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-success mt-4">Guardar Usuario</button>
                                    <a class="btn btn-danger mt-4" href="/usuarios">Cancelar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <%- include("../partials/footer") %>